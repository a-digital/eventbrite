<table class="data fullwidth">
  <tbody>
    {% for event in craft.eventbrite.allEvents() %}
      <tr>
        <td>{{ event['name']['text'] }} <span class="light nowrap">{{ event['start']['utc']|date("d/m/Y") }}</span></td>
      </tr>
    {% endfor %}
  </tbody>
</table>
